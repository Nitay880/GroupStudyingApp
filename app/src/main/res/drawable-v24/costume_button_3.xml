<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#8EB577" />
            <gradient android:angle="-90" android:startColor="#D4EA97" android:endColor="#B9F3A3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#131C14" />
            <solid android:color="#26A61D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#AEF393" />
            <gradient android:angle="-90" android:startColor="#438141" android:endColor="#C0DF8C" />
        </shape>
    </item>
</selector>